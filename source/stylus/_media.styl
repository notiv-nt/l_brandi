
@media screen and (max-width: 1025px)

	section.works
		.items
			.item
				width (100% / 3)


@media screen and (max-width: 800px)

	section.works
		.items
			.item
				width (100% / 2)

	section.facts
		.item
			width (100% / 2)

			.picture
				margin-bottom 20px

				span
					width 100px
					height @width
					line-height @width - 5%
					font-size 10px

			h2
				font-size 2.3em
				font-weight 600

			p
				font-size 1em


@media screen and (max-width: 641px)

	html, body
		font-size 11px

	section.box
		padding-top 25px
		padding-bottom 25px

	section.works
		.items
			.item
				width 100%
				height 250px

	section.banner
		min-height 400px
		max-height 550px

		.item
			h2
				font-size 2.5em
			h3
				font-size 2.5em
			.socials
				padding 45px 0 20px

	header.main-header
		.logo
			button.toggle-nav
				display block

		nav.main-nav
			display none
			float none

			a
				display block
				padding 5px 10px
				margin 5px 10px

				&:hover, &.active
					border-left 1px solid #32b0ee
					text-indent -1px

				&:after
					display none

	footer.main-footer
		padding 30px 0 30px 0
		.title
			min-height 40px
			padding-bottom 10px

		ul
			li
				width (100% / 3)